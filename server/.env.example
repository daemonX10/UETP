# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/trading_platform
DB_NAME=trading_platform

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Trading Platform <noreply@tradingplatform.com>

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Upstox API Configuration
UPSTOX_API_URL=https://api.upstox.com/v2
UPSTOX_CLIENT_ID=your_upstox_client_id
UPSTOX_CLIENT_SECRET=your_upstox_client_secret
UPSTOX_REDIRECT_URI=http://localhost:5000/api/upstox/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/trading_platform.log

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Market Data Configuration
MARKET_DATA_UPDATE_INTERVAL=5000
MARKET_HOURS_START=09:15
MARKET_HOURS_END=15:30

# Trading Configuration
DEFAULT_BROKERAGE_RATE=0.03
MAX_ORDER_VALUE=1000000
MIN_ORDER_VALUE=1

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true

# Development Settings
DEBUG_MODE=true
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs
